
<table class="table">
  <tr>
    <th>User name</th>
    <th>content</th>
  </tr>
  <% @messages.each do |m| %>
    <tr>
      <td><%= m.username %></td>
      <td><%= m.content %></td>
    </tr>
  <% end %>

</table>

<%= form_for :message, method: :post do |m| %>
  <%= m.text_field :content %>
  <%= m.submit 'send' %>
<% end %>
